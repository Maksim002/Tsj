<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        app:name="titleTextColor"@color/orangeColor"
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="BottomLineColor" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="aaa">
        <item name="android:spinnerItemStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="ToolBarStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/whiteColor</item>
        <item name="android:textColorPrimary">@color/colorDrawer</item>
        <item name="android:textColorSecondary">@color/colorDrawer</item>
        <item name="actionMenuTextColor">@color/colorDrawer</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/orangeColor</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circle_green_backround</item>
    </style>

    <style name="RoundedOrangeBackground" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circle_orange_backround</item>
    </style>

    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/orangeColor</item>
    </style>

    <style name="NoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OutLinedEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">#001</item>

        <item name="boxStrokeColor">#001</item>
        <item name="boxStrokeErrorColor">#001</item>

        <item name="errorTextColor">@color/itemIconTintF</item>
        <item name="errorEnabled">true</item>

        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/itemIconTintF</item>
        <item name="android:textColorHint">#001</item>

    </style>


    <style name="OutLinedEditTextStyle.Spinner">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView.FilledBox</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_save</item>
        <item name="endIconContentDescription">Drop down</item>
    </style>

</resources>