<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.message.fragments.MessageBottomSheet">

    <TextView
        android:id="@+id/textview_new_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginHorizontal"
        android:text="@string/new_msg"
        android:textColor="@color/orangeColor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/fasten_file_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/marginHorizontal"
        android:src="@drawable/ic_fasten"
        app:layout_constraintBottom_toBottomOf="@id/send_msg_imageiew"
        app:layout_constraintEnd_toStartOf="@id/send_msg_imageiew" />


    <ImageView
        android:id="@+id/send_msg_imageiew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/marginHorizontal"
        android:src="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="@id/textview_new_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_new_msg" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/marginHorizontal"
        android:layout_marginTop="@dimen/marginHorizontal"
        android:layout_marginEnd="@dimen/marginHorizontal"
        android:background="@color/dividerColor"
        app:layout_constraintTop_toBottomOf="@id/textview_new_msg" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:hint="Заголовок"
            android:padding="16dp" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_sms_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_title_text">

        <EditText
            android:id="@+id/edit_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:hint="Написать письмо"
            android:padding="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_sms_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>