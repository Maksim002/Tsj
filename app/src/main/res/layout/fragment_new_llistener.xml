<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.history.fragments.HistoryListFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Address"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Адрес">

        <AutoCompleteTextView
            android:id="@+id/autoAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableEnd="@drawable/ic_expend"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="23dp"
            android:paddingEnd="8dp"
            android:background="@null"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_divider"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Service"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Услуга">

        <AutoCompleteTextView
            android:id="@+id/autoService"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableEnd="@drawable/ic_expend"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="23dp"
            android:paddingEnd="8dp"
            android:background="@null"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_divider"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Operation"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Операция">

        <AutoCompleteTextView
            android:id="@+id/autoOperation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableEnd="@drawable/ic_expend"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="23dp"
            android:paddingEnd="8dp"
            android:background="@null"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/DatesS"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Даты с"
            android:layout_weight="1">

            <EditText
                android:id="@+id/autoDatesS"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableEnd="@drawable/ic_date_range_black_24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="23dp"
                android:paddingEnd="8dp"
                android:background="@null"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/DatesDo"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Дата по"
            android:layout_weight="1">

            <EditText
                android:id="@+id/autoDatesDo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableEnd="@drawable/ic_date_range_black_24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="23dp"
                android:paddingEnd="8dp"
                android:background="@null"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_divider"/>

    <Button
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="14sp"
        android:text="Показать"
        android:textColor="#FFFFFF"
        style="@style/RoundedOrangeBackground"/>

    <include layout="@layout/item_focus"
        android:id="@+id/goneL"/>

</LinearLayout>