<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".ui.voice.DesignerFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/designer_tsj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:textColorHint="#000000"
        android:focusableInTouchMode="true"
        android:hint="ТСЖ">

        <AutoCompleteTextView
            android:id="@+id/designer_tsj_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_expend" />

    </com.google.android.material.textfield.TextInputLayout>

    <include layout="@layout/item_divider_model" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/designer_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:textColorHint="#000000"
        android:focusableInTouchMode="true"
        android:hint="Дом:">

        <AutoCompleteTextView
            android:id="@+id/designer_home_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_expend" />

    </com.google.android.material.textfield.TextInputLayout>

    <include layout="@layout/item_divider_model" />

    <Button
        android:id="@+id/designer_add_voice"
        style="@style/RoundedOrangeBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Добавить голосование"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</LinearLayout>