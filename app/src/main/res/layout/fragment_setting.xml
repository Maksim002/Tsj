<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тип пользователя"
        android:textColor="#FF9116"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_setting_user"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/setting_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="#000000"
            android:focusableInTouchMode="true"
            android:hint="Председатель">

            <AutoCompleteTextView
                android:id="@+id/setting_user_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:background="@null"
                android:drawableEnd="@drawable/ic_expend" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <include layout="@layout/item_divider_model" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Настройки приложения"
        android:textColor="#FF9116"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/ic_notification"
            android:textColor="#000000"
            android:text="Выдана" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/SCBSwitch" />
    </LinearLayout>

    <include layout="@layout/item_divider_model"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/ic_sound"
            android:textColor="#000000"
            android:text="Звук" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/SCBSwitch" />
    </LinearLayout>

    <include layout="@layout/item_divider_model"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Управление ТСЖ"
        android:layout_marginTop="16dp"
        android:textColor="#FF9116"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/setting_general_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_general_information"
        android:textColor="#000000"
        android:text="Общая информация" />

    <include layout="@layout/item_divider_model"/>

    <TextView
        android:id="@+id/setting_general_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_address"
        android:textColor="#000000"
        android:text="Адрес" />

    <include layout="@layout/item_divider_model"/>

    <TextView
        android:id="@+id/setting_requisites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_bank_details"
        android:textColor="#000000"
        android:text="Банковские реквизиты" />

    <include layout="@layout/item_divider_model"/>

    <TextView
        android:id="@+id/setting_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_staff"
        android:textColor="#000000"
        android:text="Сотрудники" />

    <include layout="@layout/item_divider_model"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_schedule_works"
        android:textColor="#000000"
        android:text="График работ" />

    <include layout="@layout/item_divider_model"/>
</LinearLayout>
</androidx.core.widget.NestedScrollView>