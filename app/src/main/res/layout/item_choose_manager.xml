<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reference_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Выберите председателя ТСЖ"
        android:padding="16dp">

        <AutoCompleteTextView
            android:id="@+id/reference_dialog_text"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:focusable="false"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_expend" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_save_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orangeColor"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:text="Скачать"/>

        <TextView
            android:id="@+id/text_dismiss_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orangeColor"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:text="Отмена"/>
    </LinearLayout>

</LinearLayout>